	File Contents

		Allows the user to view # of enrollments over time for a given course. The user can choose which
		data gets displayed.
*@
@using TAApplication.Data
@inject ApplicationDbContext _db
@{
	ViewData["Title"] = "Enrollment Trends";
}

<form>
	<div class="form-group col-md-3">
		<label for="start-date" class="control-label">start date</label>
		<input name="start-date" type="date" class="form-control" id="start-date" value="" required />
	</div>
	<div class="form-group col-md-3">
		<label for="end-date" class="control-label">end date</label>
		<input name="end-date" type="date" class="form-control" id="end-date" value="" required />
	</div>
	<div class="form-group col-md-3">
		<label for="course-identifier" class="control-label">choose a course</label>
		<select name="course-identifier" class="form-control" id="course-identifier" required>
			@foreach (Course course in _db.Courses) {
				<option>@String.Concat(course.Department, " ", course.Number)</option>
			}
		</select>
	</div>
	<button type="button" >get data</button>
</form>

<section>
	<h1>Enrollments Over Time</h1>
	<div id="my_highchart"></div>
</section>