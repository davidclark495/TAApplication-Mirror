<h1>Create</h1>

<h4>Application</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PursuingDegree" class="control-label"></label>
                <select asp-for="PursuingDegree" class="form-control" asp-items="@Html.GetEnumSelectList(typeof(TAApplication.Models.DegreeLevel))"></select>
                <span asp-validation-for="PursuingDegree" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Program" class="control-label"></label>
                <input asp-for="Program" class="form-control" />
                <span asp-validation-for="Program" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GPA" class="control-label"></label>
                <input asp-for="GPA" class="form-control" />
                <span asp-validation-for="GPA" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoursWanted" class="control-label"></label>
                <input asp-for="HoursWanted" class="form-control" />
                <span asp-validation-for="HoursWanted" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="EarlyAvailability" /> @Html.DisplayNameFor(model => model.EarlyAvailability)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="SemestersCompletedAtUtah" class="control-label"></label>
                <input asp-for="SemestersCompletedAtUtah" class="form-control" />
                <span asp-validation-for="SemestersCompletedAtUtah" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonalStatement" class="control-label"></label>
                <input asp-for="PersonalStatement" class="form-control" />
                <span asp-validation-for="PersonalStatement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransferSchool" class="control-label"></label>
                <input asp-for="TransferSchool" class="form-control" />
                <span asp-validation-for="TransferSchool" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LinkedInURL" class="control-label"></label>
                <input asp-for="LinkedInURL" class="form-control" />
                <span asp-validation-for="LinkedInURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResumeFilename" class="control-label"></label>
                <input asp-for="ResumeFilename" class="form-control" />
                <span asp-validation-for="ResumeFilename" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
