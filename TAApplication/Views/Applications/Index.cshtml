<h1>Index</h1>

<form asp-action="Edit" class="form-floating row g-3">
    <div class="col-md-4">
        <label class="form-label">Number of Applications</label>
        <input class="form-control" type="text" value="@_db.Applications.Count()" aria-label="Number of Applications" disabled>

        <label class="form-label">Average GPA</label>
        <input class="form-control" type="text" value="@_db.Applications.Average(a => a.GPA)" aria-label="Average GPA" disabled>
        <br />
        <a class="btn btn-secondary" asp-action="List">View Application List</a>
    </div>
</form>