<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TAApplication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TAApplication.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TA Application</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @if(curUser != null){
                            @if(await _um.IsInRoleAsync(curUser, "Admin"))
                            {
                                <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Roles">Role Manager</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Applications" asp-action="Index">Applications Index</a>
                            }
                            @if (await _um.IsInRoleAsync(curUser, "Professor") || await _um.IsInRoleAsync(curUser, "Admin"))
                            {
                                <a class="nav-link text-dark" asp-area="" asp-controller="Courses" asp-action="List">Courses List</a>
                            }
                            @if (await _um.IsInRoleAsync(curUser, "Professor"))
                            {
                                <a class="nav-link text-dark" asp-area="" asp-controller="Applications" asp-action="List">Application List</a>
                            }

                            @if (await _um.IsInRoleAsync(curUser, "Applicant"))
                            {
                                Application? existingApp = _db.Applications
                                                                    .Where(app => app.TAUser.Id == curUser.Id)
                                                                    .FirstOrDefault();
                                if (existingApp == null)
                                {
                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Applications" asp-action="Create">Apply Now</a></li>
                                }
                                else
                                {
                                    String url = "/Applications/Details/" + existingApp.ID;
                                    <li><a class="nav-link text-dark" href=@url>View Application</a></li>
                                }
                            }
                        }



                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">TA</a>
                            <ul class="dropdown-menu">
                                @if (curUser != null)
                                {
                                    <li><p class="text-center">@curUser.Name</p></li>
                                    <li><hr /></li>
                                    <li><a class="dropdown-item" asp-controller="Courses" asp-action="List">List of all Courses</a></li>
                                    <li><a class="dropdown-item" asp-controller="Courses" asp-action="Details" asp-route-id="1">Details of First Course</a></li>
                                    <li><a class="dropdown-item" asp-controller="Courses" asp-action="Edit" asp-route-id="1">Update First Course</a></li>
                                    <li><a class="dropdown-item" asp-controller="Courses" asp-action="Create">Create a Course</a></li>
                                }
                                else
                                {
                                    <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Login">Login</a></li>
                                }
                            </ul>

                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - TAApplication - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>